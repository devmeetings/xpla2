{
  "name": "xpla-runner",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "npm run lint",
    "postinstall": "cd ./runners/workers/html-ts && npm install",
    "semistandard": "semistandard",
    "lint": "semistandard --verbose | snazzy"
  },
  "config": {
    "pre-git": {
      "pre-push": [
        "npm test"
      ],
      "post-commit": "git st",
      "post-merge": "npm instal"
    }
  },
  "semistandard": {
    "ignore": [
      "**/node_modules/**",
      "cdn/**"
    ]
  },
  "author": "Tomusdrw <tomusdrw@todr.me>",
  "license": "ISC",
  "dependencies": {
    "good": "^6.4.0",
    "good-console": "^5.2.0",
    "hapi": "^11.1.2",
    "highlight.js": "^9.0.0",
    "inert": "^3.2.0",
    "joi": "^7.0.1",
    "lodash": "^3.10.1",
    "lout": "^8.0.1",
    "marked": "^0.3.5",
    "mime-types": "^2.1.8",
    "node-uuid": "^1.4.7",
    "redis": "^2.4.2",
    "redis-url": "^1.2.1",
    "vision": "^4.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.8.1",
    "pre-git": "^3.1.2",
    "semistandard": "^7.0.4",
    "snazzy": "^2.0.1"
  }
}
