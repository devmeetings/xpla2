{
  "name": "xpla-runner",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "copy-config": "cp ../tools/git-to-slides/config.js ./static && cp ../tools/git-to-slides/xpla.json ./static",
    "prestart": "npm run copy-config",
    "start": "nodemon index.js",
    "test": "npm run lint",
    "postinstall": "cd ./runners/workers/ && ./sub_install",
    "semistandard": "semistandard",
    "lint": "semistandard --verbose | snazzy",
    "clean_modules": "rm node_modules -Rf && cd ./runners/workers && ./sub_clean"
  },
  "semistandard": {
    "ignore": [
      "**/node_modules/**",
      "cdn/**"
    ]
  },
  "author": "Tomusdrw <tomusdrw@gmail.com>",
  "dependencies": {
    "good": "7.1.0",
    "good-console": "6.1.3",
    "hapi": "16.1.0",
    "highlight.js": "9.9.0",
    "inert": "4.1.0",
    "joi": "10.2.0",
    "lodash": "4.17.4",
    "lout": "9.2.0",
    "marked": "0.3.6",
    "mime-types": "2.1.14",
    "redis": "2.6.5",
    "redis-url": "1.2.1",
    "uuid": "3.0.1",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "nodemon": "1.11.0",
    "semistandard": "9.2.1",
    "snazzy": "6.0.0"
  }
}
